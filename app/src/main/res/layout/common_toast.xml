<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/toastHorizontalPadding"
                android:paddingRight="@dimen/toastHorizontalPadding"
                android:paddingTop="@dimen/toastVerticalPadding"
                android:paddingBottom="@dimen/toastVerticalPadding"
                android:background="@drawable/toast_bg">
    <TextView
            android:id="@+id/tvToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/toastMaxWidth"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"/>
</RelativeLayout>
